# ====================================
# Backend Configuration
# ====================================
BACKEND_PORT=3000

# Database (co the dung PostgreSQL tren server hoac external)
# Neu dung PostgreSQL container tren server Azure: DATABASE_HOST=pg16 hoac host.docker.internal
DATABASE_HOST=your_database_host_or_ip
DATABASE_PORT=5432
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=your_db_name

# JWT
JWT_SECRET=your_super_secret_jwt_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://your-server-ip:3000/api/auth/google/callback

# ====================================
# Frontend Configuration
# ====================================
FRONTEND_PORT=80

# URL cua backend API (frontend se goi API nay)
VITE_API_URL=http://your-server-ip:3000

# URL cua frontend (backend se redirect ve day)
FRONTEND_URL=http://your-server-ip
